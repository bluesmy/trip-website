<div class="row">
  <div class="col-md-12">
    <h1>{{product.name}}</h1>
  </div>
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{media.src}}" style="width: 250px;margin-bottom: 25px;">
    <br>
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Price:</strong> {{product.price}}</li>
        <li><strong>Type:</strong> {{product.type}}</li>
      </ul>
    </div>
  </div>
  <div class="col-md-8">
    <p>{{product.description}}</p>
  </div>
  <hr>
</div>

